<?xml version="1.0" encoding="UTF-8"?>
<appendix id="Shortcuts">
  <title>Shortcut keys</title>

  <para>Most common shortcut keys familiar from other Windows applications
  work in WinMerge.</para>

  <table>
    <title>Directory compare</title>

    <tgroup cols="2">
      <thead>
        <row>
          <entry>Key</entry>

          <entry>Function</entry>
        </row>
      </thead>

      <tbody>
        <row>
          <entry><keycap>Enter</keycap></entry>

          <entry>Open selected item (if folder, open it)</entry>
        </row>

        <row>
          <entry><keycap>Backspace</keycap></entry>

          <entry>Open parent folder if possible (only available when
          subfolders are not included in compare)</entry>
        </row>

        <row>
          <entry><keycap>F5</keycap></entry>

          <entry>Rescan directories</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Alt</keycap>

              <keycap>Home</keycap>
            </keycombo></entry>

          <entry>Go to first different file/directoriy</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Alt</keycap>

              <keycap>End</keycap>
            </keycombo></entry>

          <entry>Go to last different file/directoriy</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Alt</keycap>

              <keycap>Enter</keycap>
            </keycombo></entry>

          <entry>Go to currently selected item (if scrolled
          off-screen)</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Alt</keycap>

              <keycap>Up Arrow</keycap>
            </keycombo></entry>

          <entry>Go to previous different file/directory</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Alt</keycap>

              <keycap>Down Arrow</keycap>
            </keycombo></entry>

          <entry>Go to next different file/directory</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Alt</keycap>

              <keycap>Left Arrow</keycap>
            </keycombo></entry>

          <entry>Copy selected items from right to left</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Alt</keycap>

              <keycap>Right Arrow</keycap>
            </keycombo></entry>

          <entry>Copy selected items from left to right</entry>
        </row>
      </tbody>
    </tgroup>
  </table>

  <table>
    <title>File compare</title>

    <tgroup cols="2">
      <thead>
        <row>
          <entry>Key</entry>

          <entry>Function</entry>
        </row>
      </thead>

      <tbody>
        <row>
          <entry><keycap>Esc</keycap></entry>

          <entry>Close window (if enabled in options)</entry>
        </row>

        <row>
          <entry><keycap>F3</keycap></entry>

          <entry>Find again</entry>
        </row>

        <row>
          <entry><keycap>F4</keycap></entry>

          <entry>Show line difference</entry>
        </row>

        <row>
          <entry><keycap>F5</keycap></entry>

          <entry>Refresh</entry>
        </row>

        <row>
          <entry><keycap>F6</keycap></entry>

          <entry>Change pane (active file)</entry>
        </row>

        <row>
          <entry><keycap>F7</keycap></entry>

          <entry>Go to previous difference</entry>
        </row>

        <row>
          <entry><keycap>F8</keycap></entry>

          <entry>Go to next difference</entry>
        </row>

        <row>
          <entry><keycap>F9</keycap></entry>

          <entry>Turn Merge mode on/off</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Ctrl</keycap>

              <keycap>G</keycap>
            </keycombo></entry>

          <entry>Go to difference or line</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Ctrl</keycap>

              <keycap>Z</keycap>
            </keycombo></entry>

          <entry>Undo last action</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Ctrl</keycap>

              <keycap>Y</keycap>
            </keycombo></entry>

          <entry>Redo previously undone action</entry>
        </row>
      </tbody>
    </tgroup>
  </table>

  <table>
