          <entry>Go to first difference</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Alt</keycap>

              <keycap>End</keycap>
            </keycombo></entry>

          <entry>Go to last difference</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Alt</keycap>

              <keycap>Enter</keycap>
            </keycombo></entry>

          <entry>Go to current difference or select difference</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Alt</keycap>

              <keycap>Up Arrow</keycap>
            </keycombo></entry>

          <entry>Go to previous difference</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Alt</keycap>

              <keycap>Down Arrow</keycap>
