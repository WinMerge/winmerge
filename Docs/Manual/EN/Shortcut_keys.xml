  <table>
    <title>Zoom</title>

    <tgroup cols="2">
      <thead>
        <row>
          <entry>Keys</entry>

          <entry>Function</entry>
        </row>
      </thead>

      <tbody>
        <row>
          <entry><keycombo>
              <keycap>Ctrl</keycap>

              <keycap>+</keycap>
            </keycombo></entry>

          <entry>Increase text size</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Ctrl</keycap>

              <keycap>-</keycap>
            </keycombo></entry>

          <entry>Decrease text size</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Ctrl</keycap>

              <keycap>*</keycap>
            </keycombo></entry>

          <entry>Reset text zoom to default size</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Ctrl</keycap>

              <mousebutton>MouseWheel Up</mousebutton>
            </keycombo></entry>

          <entry>Increase text size</entry>
        </row>

        <row>
          <entry><keycombo>
              <keycap>Ctrl</keycap>

              <mousebutton>MouseWheel Down</mousebutton>
            </keycombo></entry>

          <entry>Decrease text size</entry>
        </row>
      </tbody>
    </tgroup>
  </table>
